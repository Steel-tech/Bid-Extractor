{
  "manifest_version": 3,
  "name": "Bid Extractor",
  "version": "1.4.0",
  "description": "Matrix-themed bid extraction with priority scoring, dashboard stats, and digital rain animation. Extract RFQ data from Gmail, Outlook, BuildingConnected, PlanHub, Procore.",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*",
    "https://outlook.office365.com/*",
    "https://*.outlook.com/*",
    "https://*.buildingconnected.com/*",
    "https://app.buildingconnected.com/*",
    "https://*.planhub.com/*",
    "https://*.procore.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/utils/config-loader.js", "src/utils/safe-query.js", "src/content/gmail.js"],
      "css": ["src/content/content.css"]
    },
    {
      "matches": [
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*",
        "https://*.outlook.com/*"
      ],
      "js": ["src/utils/config-loader.js", "src/utils/safe-query.js", "src/content/outlook.js"],
      "css": ["src/content/content.css"]
    },
    {
      "matches": [
        "https://*.buildingconnected.com/*",
        "https://app.buildingconnected.com/*"
      ],
      "js": ["src/utils/config-loader.js", "src/utils/safe-query.js", "src/content/platforms/buildingconnected.js"]
    },
    {
      "matches": ["https://*.planhub.com/*"],
      "js": ["src/utils/config-loader.js", "src/utils/safe-query.js", "src/content/platforms/planhub.js"]
    },
    {
      "matches": ["https://*.procore.com/*"],
      "js": ["src/utils/config-loader.js", "src/utils/safe-query.js", "src/content/platforms/procore.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/config/*.json",
        "src/utils/*.js"
      ],
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*",
        "https://*.outlook.com/*",
        "https://*.buildingconnected.com/*",
        "https://app.buildingconnected.com/*",
        "https://*.planhub.com/*",
        "https://*.procore.com/*"
      ]
    },
    {
      "resources": [
        "src/blueprint/*",
        "src/lib/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
